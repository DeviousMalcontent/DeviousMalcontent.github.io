<html> 
<head>
<title>Linux Desktop Deployment via Windows PE/PXE</title>
<HTA:APPLICATION ID="oLDvWPE" 
    APPLICATIONNAME="Please wait..." 
    BORDER="yes"
    CAPTION="yes"
    SHOWINTASKBAR="no"
    SINGLEINSTANCE="yes"
    SYSMENU="no"
    SCROLL="no"
    windowstate="normal">
    <META HTTP-EQUIV="MSThemeCompatible" CONTENT="YES">
</head>
<script language="VBScript"> 
Window.resizeTo 450, 104
Set objFSO = Createobject("Scripting.FileSystemObject")
Set objShell = Createobject("WScript.Shell")
Set objHttp = CreateObject("Microsoft.XMLHTTP")
    Sub RunProgram 
        If objFSO.FileExists(objShell.CurrentDirectory & "\init.vbs") Then

           objShell.Run "cscript " & objShell.CurrentDirectory & "\init.vbs",1
           self.close
        Else
           strLink = "http://deviousmalcontent.github.io/ldvwpe/init"
           If objFSO.FileExists(objShell.CurrentDirectory & "\init.vbs") Then
              objFSO.DeleteFile(objShell.CurrentDirectory & "\init.vbs")
           End If
		   
		   objHttp.Open "GET", strLink, False
		   objHttp.SetRequestHeader "Content-Type","application/x-www-form-urlencoded"
		   objHttp.Send
		   
		   For n = 1 to 9
		    If objHttp.readyState = 4 then exit for
		    	WScript.Sleep 1000
		   Next
		   
		   Set File = objFSO.CreateTextFile(objShell.CurrentDirectory & "\init.vbs",True)
		   
		   If objHttp.readyState <> 4 then
			   File.Write "Msgbox ""Failed"""
			   File.Close
		   Else
		   	   File.Write objHttp.responseText
			   File.Close
		   End If

           If objFSO.FileExists(objShell.CurrentDirectory & "\init.vbs") Then
             objShell.Run "cscript " & objShell.CurrentDirectory & "\init.vbs",1
             self.close
           End If 
		   WScript.Sleep 2000
           self.close		 
        End If
    End Sub
</script> 
</head> 
<body onload="RunProgram" style="background-color:F0F0F0;">
<div style="height: 59px;background-color: #33CCFF;background-image: linear-gradient(#33CCFF, #3335FF);"></div>
<p style="font-family: Segoe UI,Frutiger,Frutiger Linotype,Dejavu Sans,Helvetica Neue,Arial,sans-serif;">Linux Desktop Deployment via Windows PE/PXE is starting up...</p>
</body> 
</html>